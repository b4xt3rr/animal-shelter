<div class="tables">
	<table class="show">
		<tr>
			<th>Name</th>
			<th>Type</th>
			<th>Admission Date</th>
		</tr>

		<% for pet in @pets %>
			<tr>
				<td><%= pet.name %></td>
				<td><%= pet.breed %></td>
				<td><%= pet.admission_date %></td>
				<td id="hidetable"><form action="/volunteer/animal/<%= pet.animal_id %>/edit" method="GET">
					<input type="submit" value="Edit Pet">
				</form></td>
				<td><form action="/volunteer/animal/<%= pet.animal_id %>/edit/adoption" method="POST">
					<input type="submit" value="Start Adoption Process">
				</form></td>
				<td><form action="/volunteer/animal/<%= pet.animal_id %>/edit/adoption" method="GET">
					<input type="submit" value="Update Adoption Process">
				</form></td>
				<td><form action="/volunteer/animal/<%= pet.animal_id %>/edit/training" method="GET">
					<input type="submit" value="Update Training Program">
				</form></td>
			</tr>

		<% end %>

	</table>
</div>
